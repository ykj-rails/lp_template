@media screen and (max-width: 960px)
  .formRow
    flex-direction: column
    padding: 0 0 21.5px
    margin-bottom: 0
    align-items: flex-start
    &:last-of-type
      padding-bottom: 50px
      margin-bottom: 0
    &first-of-type
      padding-top: 0
    width: 100%
  .formRow__que
    margin-top: 0;
    justify-content: space-between
    padding: 0 17px
  .formRow__ans
    max-width: none
    padding: 0 17px
    margin-top: 12.5px
    min-width: 0
  .formRow__que__main
    margin-left: 15px
    font-weight bold
  .formRow__que__main--secondary
    margin-left: 0px
    margin-right: 15px
    width 80%
    text-align: left
    font-size 14px
@media screen and (max-width: $break-point-sp)
  .formRow__que__label--required
    width: 40px
    height: 20px
    font-size: 12px
    line-height: 20px
  .formRow__que__label--any
    width: 45px
    height: 20px
    font-size: 10px
    line-height: 20px
  .formRow__que__main
    font-size: 14px
    margin-left 0
    margin-right 15px
    font-weight bold
  .formRow__ans
    max-width: none
    padding: 0 17px
    margin-top: 12.5px
    min-width: 0
  .formRow__ans__chara
    margin: 0 17px 0 5px
    &:last-of-type
      margin-right: 0
  .inputMain
  .inputSecondary
  ._selectBase
  .selectMain
    font-size: 14px
  .inputSecondary
    width: 100%
  .selectSecondary
    width: 97px
  .selectTertiary
    width: 55.5px

  .radioSet
    margin-right: 0
    font-size: 16px
    &:first-of-type
      margin: 0 130px 5px 0
  .radioSet__button
    margin-right: 15px
  .textareaMain
    height: 188.8px
  .formRow__que--secondary
    width: 100%
    width 100%
    height: auto
    margin: 10px auto
    padding 0 27px
    display: flex
    justify-content: space-between

  .formRow__que__annotation
    font-size 12px

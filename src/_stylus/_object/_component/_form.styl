.formRow
  // border-bottom: 1px solid $clr-line--light
  display: flex
  align-items: center
  flex-wrap: nowrap
  padding: 10px 0
  &:last-of-type
    border-bottom: 0
    padding-bottom: 0
    margin-bottom: 40px
.formRow--select
  padding 15px 0
  &:last-of-type
    border-bottom: 0
    padding-bottom: 0
    margin-bottom: 30px
.formRow__que
  height: auto
  width: 100%
  max-width: 507px
  display: flex
  justify-content: space-between
  align-items: center
.formRow__que--secondary
  width: 100%
  height: auto
  // margin-top: 10px
  display: flex
  align-items: center
.formRow__que__main
  font-size: 20px
  text-align: left
  font-weight: normal
.formRow__que__main--secondary
  margin-left:15px;
  font-size: 20px


._formRow__que__label
  display: flex
  width: 40px
  height: 21px
  justify-content: center
  align-items: center
  border-radius: 6px
  color: $clr-white
  border: none
  font-size: 12px

.formRow__que__label--required
  @extends ._formRow__que__label
  background: #f97d7d
.formRow__que__label--any
  @extends ._formRow__que__label
  background: $clr-any

.formRow__ans
  display: flex
  flex-wrap: wrap
  align-items: center
  padding-left: 10px
  width: 100%
  min-width: 504px
.formRow__ans--select
  display: flex
  flex-wrap: wrap
  align-items: center
  width: 100%
.formRow__que__annotation
  color #808080
._inputBase
  height: 50px
  padding: 0 19px
  border-radius: 3px
  border: 1px solid $clr-border
  font-size: 16px
  &::placeholder
    color: $clr-place

.inputMain
  @extends ._inputBase
  width: 100%
.inputSecondary
  @extends ._inputBase
  width: 162px

._selectBase
  @extends ._inputBase
.selectMain
  @extends ._selectBase
  width: 100%

._selectBoxBase
  position: relative
  &:after
    content: ''
    display: block
    position: absolute
    top: 50%
    transform: translateY(-50%)
    width: 0
    height: 0
    border-top: 11px solid $clr-triangle
    border-right: 7px solid transparent
    border-left: 7px solid  transparent
.selectBox
  @extends ._selectBoxBase
  width: 100%
  &:after
    right: 25px
.selectBox--short
  @extends ._selectBoxBase
  &:after
    right: 14px
.selectSecondary
  @extends ._selectBase
  width: 140px
.selectTertiary
  @extends ._selectBase
  width: 70px

.formRow__ans__chara
  display: inline-block
  font-weight: bold
  height: 23px
  margin: 0 28.6px 0 12px
.radioSet
  margin-right: 50px
  display: flex
  align-items: center
.radioSet__button
  margin-right: 15px

.textareaMain
  width: 100%
  height: 100px
  padding: 10px
  border: 1px solid $clr-border
  border-radius: 3px
  font-size: 16px
  &::placeholder
    font-size: 16px
    color: $clr-any

.formErrorTxt
  color: $clr-err
  margin-left: 10px
  display: none
.form__caution
  margin-top: 45px
  font-size: 16px
